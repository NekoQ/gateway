<table style="text-align: center;">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Nature</th>
    <th>Balance</th>
    <th>Currency</th>
  </tr>
  <% @accounts_list.each do |account| %>
    <tr>
      <td><%= link_to account['id'], transactions_path(:connection_id => @connection_id, :account_id => account['id']) %></td>
      <td> <%= account['name'] %> </td>
      <td> <%= account['nature'] %> </td>
      <td> <%= account['balance'] %> </td>
      <td> <%= account['currency_code'] %> </td>
    </tr>
  <% end %>
</table>
<%= link_to 'home', root_path %>
